<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ChangeProfileIcon"
                                                   android:background="@drawable/ic_background_gradient">
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.5"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.46"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.3"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.7"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.6019152"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline6"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.68262655"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline7"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.76"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline8"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.0"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline9"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.333333"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline10"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.666666"/>
	
	<ImageView
			android:id="@+id/profile_vector"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintBottom_toTopOf="@+id/guideline2"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/guideline8"
			app:srcCompat="@drawable/ic_profile" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
			android:layout_marginTop="24dp" android:layout_marginBottom="24dp"/>
	
	<TextView
			android:id="@+id/outfit"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:fontFamily="@font/big_john"
			android:gravity="center"
			android:text="@string/outfit_color"
			android:textSize="18sp"
			app:layout_constraintBottom_toTopOf="@+id/guideline5"
			app:layout_constraintEnd_toStartOf="@+id/guideline4"
			app:layout_constraintStart_toStartOf="@+id/guideline3"
			app:layout_constraintTop_toTopOf="@+id/guideline13" android:textColor="@color/start_grad_end"/>
	
	<TextView
			android:id="@+id/skin"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:fontFamily="@font/big_john"
			android:gravity="center"
			android:text="@string/skin_color"
			android:textSize="18sp"
			app:layout_constraintBottom_toTopOf="@+id/guideline6"
			app:layout_constraintEnd_toStartOf="@+id/guideline4"
			app:layout_constraintStart_toStartOf="@+id/guideline3"
			app:layout_constraintTop_toTopOf="@+id/guideline5" android:textColor="@color/start_grad_end"/>
	
	<TextView
			android:id="@+id/hair"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:fontFamily="@font/big_john"
			android:gravity="center"
			android:text="@string/hair_color"
			android:textSize="18sp"
			app:layout_constraintBottom_toTopOf="@+id/guideline7"
			app:layout_constraintEnd_toStartOf="@+id/guideline4"
			app:layout_constraintStart_toStartOf="@+id/guideline3"
			app:layout_constraintTop_toTopOf="@+id/guideline6" android:textColor="@color/start_grad_end"/>
	
	<TextView
			android:id="@+id/eye"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:fontFamily="@font/big_john"
			android:gravity="center"
			android:text="@string/eye_color"
			android:textSize="18sp"
			app:layout_constraintEnd_toStartOf="@+id/guideline4"
			app:layout_constraintStart_toStartOf="@+id/guideline3"
			app:layout_constraintTop_toTopOf="@+id/guideline7" app:layout_constraintBottom_toTopOf="@+id/guideline14"
			android:textColor="@color/start_grad_end"/>
	
	<TextView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/big_john"
			android:gravity="center"
			android:text="@string/your_name"
			android:textColor="@color/wizardWhite"
			android:textSize="25sp"
			app:layout_constraintBottom_toTopOf="@+id/guideline1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/guideline2"/>
	
	<ImageView
			android:id="@+id/outfit_left"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:clickable="true"
			android:onClick="onClick"
			app:layout_constraintBottom_toTopOf="@+id/guideline5"
			app:layout_constraintEnd_toStartOf="@+id/guideline3"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/guideline13"
			app:srcCompat="@drawable/ic_left_arrow"/>
	
	<ImageView
			android:id="@+id/skin_left"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:clickable="true"
			android:onClick="onClick"
			app:layout_constraintBottom_toTopOf="@+id/guideline6"
			app:layout_constraintEnd_toStartOf="@+id/guideline3"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/guideline5"
			app:srcCompat="@drawable/ic_left_arrow" android:layout_marginBottom="8dp"/>
	
	<ImageView
			android:id="@+id/hair_left"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:clickable="true"
			android:onClick="onClick"
			app:layout_constraintBottom_toTopOf="@+id/guideline7"
			app:layout_constraintEnd_toStartOf="@+id/guideline3"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/guideline6"
			app:srcCompat="@drawable/ic_left_arrow" android:layout_marginBottom="8dp"/>
	
	<ImageView
			android:id="@+id/eye_left"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:clickable="true"
			android:onClick="onClick"
			app:layout_constraintEnd_toStartOf="@+id/guideline3"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/guideline7"
			app:srcCompat="@drawable/ic_left_arrow" app:layout_constraintBottom_toTopOf="@+id/guideline14"
			android:layout_marginBottom="8dp"/>
	
	<ImageView
			android:id="@+id/outfit_right"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:clickable="true"
			android:onClick="onClick"
			app:layout_constraintBottom_toTopOf="@+id/guideline5"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/guideline13"
			app:srcCompat="@drawable/ic_right_arrow"/>
	
	<ImageView
			android:id="@+id/skin_right"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:clickable="true"
			android:onClick="onClick"
			app:layout_constraintBottom_toTopOf="@+id/guideline6"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/guideline5"
			app:srcCompat="@drawable/ic_right_arrow"/>
	
	<ImageView
			android:id="@+id/hair_right"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:clickable="true"
			android:onClick="onClick"
			app:layout_constraintBottom_toTopOf="@+id/guideline7"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/guideline6"
			app:srcCompat="@drawable/ic_right_arrow"/>
	
	<ImageView
			android:id="@+id/eye_right"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp"
			android:clickable="true"
			android:onClick="onClick"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guideline4"
			app:layout_constraintTop_toTopOf="@+id/guideline7"
			app:srcCompat="@drawable/ic_right_arrow" app:layout_constraintBottom_toTopOf="@+id/guideline14"/>
	
	<Button
			android:id="@+id/ready"
			android:layout_width="164dp"
			android:layout_height="0dp"
			android:backgroundTint="@color/ButtonColor"
			android:fontFamily="@font/big_john"
			android:text="@string/ready"
			android:textColor="@color/ButtonTextColor"
			android:textSize="18sp"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/eye" android:stateListAnimator="@null"
			app:layout_constraintVertical_bias="1.0"/>
	
	<androidx.constraintlayout.widget.Guideline
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline13" app:layout_constraintGuide_percent="0.52"/>
	<androidx.constraintlayout.widget.Guideline
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline14" app:layout_constraintGuide_percent="0.83994526"/>
	<ImageView
			android:layout_width="0dp"
			android:layout_height="48dp" app:srcCompat="@drawable/ic_shuffle"
			android:id="@+id/random"
			app:layout_constraintStart_toStartOf="@+id/randomButtonText"
			app:layout_constraintEnd_toEndOf="@+id/randomButtonText" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/randomButtonText"/>
	<TextView
			android:text="@string/randomize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/randomButtonText" app:layout_constraintStart_toStartOf="@+id/guideline4"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
			android:fontFamily="@font/big_john" android:textColor="@color/wizardWhite" android:textSize="12sp"
	/>


</androidx.constraintlayout.widget.ConstraintLayout>