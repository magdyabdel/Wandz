<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ChooseName"
                                                   android:background="@drawable/ic_background_gradient">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>
    
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.58"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_name_wizard_magic_powder"/>
    
    <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/wizardWhite"
            android:ems="10"
            android:fontFamily="@font/slim_joe"
            android:hint="@string/your_name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:textAlignment="center"
            android:textColor="@color/wizardWhite"
            android:textColorHint="@color/wizardWhite"
            android:textCursorDrawable="@color/wizardWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choose_name" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold">
    
    </EditText>
    
    <TextView
            android:id="@+id/choose_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/big_john"
            android:text="@string/choose_your_name"
            android:textAlignment="center"
            android:textColor="@color/wizardWhite"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    
    <Button
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/wizardTransparent"
            android:fontFamily="@font/big_john"
            android:text="@string/enter"
            android:textAllCaps="false"
            android:textColor="@color/wizardWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/name_field"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_field" android:layout_marginTop="16dp"
            android:textAlignment="center"/>
    
    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_choose_name" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:scaleType="fitEnd"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guidelineBottom"/>


</androidx.constraintlayout.widget.ConstraintLayout>