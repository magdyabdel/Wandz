<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MultiplayerBusy" android:background="@drawable/ic_background_gradient">
	
	<Button
			android:id="@+id/menu"
			android:layout_width="186dp"
			android:layout_height="0dp"
			android:layout_marginStart="16dp"
			android:layout_marginBottom="4dp"
			android:fontFamily="@font/big_john"
			android:text="@string/back_to_menu"
			android:textColor="@color/ButtonTextColor"
			android:textSize="18sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/guideline17"
			android:layout_marginTop="8dp" android:backgroundTint="@color/ButtonColor" android:layout_marginEnd="16dp"
			app:layout_constraintEnd_toEndOf="parent" android:stateListAnimator="@null"
			app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.497"/>
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline17"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.85"/>
	<TextView
			android:text="@string/game_busy"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:fontFamily="@font/big_john" android:textAlignment="center" android:textSize="18sp"
			android:textColor="@color/start_grad_46" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/menu" app:layout_constraintVertical_bias="0.39"/>
</androidx.constraintlayout.widget.ConstraintLayout>