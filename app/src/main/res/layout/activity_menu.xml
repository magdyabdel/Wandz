<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Menu"
                                                   android:background="@drawable/ic_background_gradient">
    
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.36"/>
    
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55"/>
    
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>
    
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>
    
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>
    
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>
    
    <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/big_john"
            android:text="@string/welcome"
            android:textColor="@color/wizardWhite"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    
    <Button
            android:id="@+id/training"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/ButtonColor"
            android:fontFamily="@font/big_john"
            android:text="@string/enter_training_world"
            android:textColor="@color/ButtonTextColor"
            android:textSize="15sp"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintBottom_toTopOf="@+id/change_profile"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/spells"
    />
    
    <Button
            android:id="@+id/spells"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="@color/ButtonColor"
            android:fontFamily="@font/big_john"
            android:text="@string/spells"
            android:textColor="@color/ButtonTextColor"
            android:textSize="15sp"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintBottom_toTopOf="@+id/setup_wand"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/training"
    />
    <Button
        android:id="@+id/stop_game"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/ButtonColor"
            android:fontFamily="@font/big_john"
            android:text="@string/enter_multiplayer_world"
            android:textColor="@color/ButtonTextColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:stateListAnimator="@null"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/guideline27" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="1.0"
    />
    
    <Button
            android:id="@+id/tutorial"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/ButtonColor"
            android:fontFamily="@font/big_john"
            android:text="@string/tutorial"
            android:textColor="@color/ButtonTextColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:stateListAnimator="@null"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/guideline3" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="8dp"/>
    <Button
            android:id="@+id/setup_wand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/ButtonColor"
            android:fontFamily="@font/big_john"
            android:text="@string/setup_your_wand"
            android:textColor="@color/ButtonTextColor"
            android:textSize="15sp"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintStart_toEndOf="@+id/change_profile"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"/>
    
    <TextView
            android:id="@+id/wise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/big_john"
            android:text="@string/feel_the_magic"
            android:textColor="@color/wizardWhite"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline1"
    />
    
    <Button
            android:id="@+id/change_profile"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/ButtonColor"
            android:fontFamily="@font/big_john"
            android:text="@string/change_profile"
            android:textColor="@color/ButtonTextColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline6" android:stateListAnimator="@null"
            app:layout_constraintEnd_toStartOf="@+id/setup_wand" android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"/>
    
    <ImageView
            android:id="@+id/profile_image"
            android:layout_width="168dp"
            android:layout_height="0dp"
            android:onClick="onClick"
            app:srcCompat="@drawable/ic_profile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/welcome"/>
    
    <Button
            android:text="@string/click_here_if_you_re_the_gamemaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/master" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:backgroundTint="@color/wizardTransparent"
            android:textColor="@color/wizardGrey" android:stateListAnimator="@null"
            android:fontFamily="@font/open_sans_light" android:textSize="14sp"/>
    
    <ImageView
            android:id="@+id/app_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_power_off"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline27"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.45"/>

</androidx.constraintlayout.widget.ConstraintLayout>